# Makefile template for a "Hello World" program
SHELL = /bin/sh
.SUFFIXES:
.SUFFIXES: .o .cxx .hxx

NAME=helloworld
OBJECTS=hello.o world.o main.o		

prefix=@prefix@
exec_prefix=@exec_prefix@
BINDIR=@bindir@
CXX=@CXX@


all: $(NAME)				

clean:
	rm -f $(NAME)
	rm -f $(OBJECTS)

install: $(NAME)
	cp $(NAME) $(BINDIR)

uninstall:
	rm -f $(BINDIR)/$(NAME)

$(NAME): $(OBJECTS)			
	$(CXX) -o $(NAME) $(OBJECTS)	

%.o:	%.cxx %.hxx				
	$(CXX) -c $< -o $@              

main.o:	main.cxx				
	$(CXX) -c $< -o $@              
